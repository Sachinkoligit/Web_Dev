<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laugh with Sachin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body{
            background-color: rgba(0, 0, 0, 0.795);
            color: white;
            font-size: 18px;
            align-items: center;
        }
        table {
            border: 2px solid white;
            width: 80%;
            margin-left: 5px;
        }

        .container1 {
            margin: 8px;
            border: 1px solid white;
            border-radius: 5px;
            padding: 10px;
        }
        .container2{
            margin: 8px;
            border: 3px solid white;
            border-radius: 5px;
            padding: 10px;
        }

        .lang {
            padding: 5px;
        }
        .btn{
            display: flex;
            gap: 20vh;
            justify-content: space-evenly;
        }
        #reset,#submit{
            width: 40%;
        }
        tr>td{
            font-weight: bold;
            padding-left: 8px;
        }
        h2{
            margin-bottom: 5px;
            margin-left: 68vh;
            margin-top: 2px;
        }
        hr {
            border-width: 3px !important; 
            border-color: white !important; 
            border-style: solid !important;
        }
        #hr hr{
            border: 3px dotted black;
        }
    </style>
</head>

<body>
    <h2>Laugh With SachinüòÅ</h2>
    <form method="post" action="/submit">
        <table>
            <tr>
                <td>Category:</td>
                <td>
                    <div class="container1">
                        <div>
                            <input type="radio" id="any" value="Any" name="choice1" />
                            <label for="any">Any</label>
                        </div>
                        <div>
                            <input type="radio" id="custom" value="Custom" name="choice1" />
                            <label for="custom">Custom</label>
    
                            <input type="checkbox" id="programming" value="Programming" name="choice11" />
                            <label for="programming">Programming</label>
    
                            <input type="checkbox" id="misc" value="Misc" name="choice11" />
                            <label for="misc">Misc</label>
    
                            <input type="checkbox" id="dark" value="Dark" name="choice11" />
                            <label for="dark">Dark</label>
    
                            <input type="checkbox" id="pun" value="Pun" name="choice11" />
                            <label for="pun">Pun</label>
    
                            <input type="checkbox" id="spooky" value="Spooky" name="choice11" />
                            <label for="spooky">Spooky</label>
    
                            <input type="checkbox" id="christmas" value="Christmas" name="choice11" />
                            <label for="christmas">Christmas</label>
                        </div>
                </td>
            </tr>
            <tr>
                <td>Language:</td>
                <td>
                    <div class="container1 lang">
                        <select name="language" id="language">
                            <option value="cs">cs-Czech</option>
                            <option value="de">de-German</option>
                            <option value="en">en-English</option>
                            <option value="es">es-Spanish</option>
                            <option value="fr">fr-French</option>
                            <option value="pt">pt-portuguese</option>
                        </select>
                    </div>
                </td>
            </tr>
            <tr>
                <td>Jokes Type:</td>
                <td>
                    <div class="container1">
                        (Optional)&nbsp;

                        <input type="checkbox" id="random" value="nsfw" name="choice2" />
                        <label for="random">Nsfw</label>
    
                        <input type="checkbox" id="religious" value="religious" name="choice2" />
                        <label for="religious">Religious</label>
    
                        <input type="checkbox" id="political" value="political" name="choice2" />
                        <label for="political">Political</label>
    
                        <input type="checkbox" id="racist" value="racist" name="choice2" />
                        <label for="racist">Racist</label>
    
                        <input type="checkbox" id="sexist" value="sexist" name="choice2" />
                        <label for="sexist">Sexist</label>
    
                        <input type="checkbox" id="explicit" value="explicit" name="choice2" />
                        <label for="explicit">Explicit</label>
                    </div>
                </td>
            </tr>
            <tr>
                <td>Joke/Jokes:</td>
                <td>
                    <div class="container1">
                        <input type="checkbox" id="single" value="single" name="choice3" />
                        <label for="single">Single</label>
    
                        <input type="checkbox" id="twoparts" value="twopart" name="choice3" />
                        <label for="twoparts">TwoParts</label>
    
                    </div>
                </td>
            </tr>
            <tr>
                <td>Amount of Joke:</td>
                <td>
                    <div class="container1 lang">
                        <input type="number" id="amount" value="amount" name="choice4" />
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div class="container1 btn lang">
                        <!-- <button class="btn btn-outline-light btn btn-primary" id="reset" name="choice" formaction="./reset.ejs">Reset</button> -->
                        <button class="btn btn-outline-light btn btn-primary" id="reset"  type="reset">Reset</button>
                        <button class="btn btn-outline-light btn btn-success" id="submit" name="choice" value="sbt" type="submit">Submit</button>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div class="container2">
                        <div>
                            Result:
                        </div>
                        <hr class="border-warning"/>
                        <div class="test">

                            <% if (locals.error) { %>
                                <%= error.message %>
                              <% } else if (locals.result1) { %>
                                <% if (result1.setup) { %>
                                  <%= result1.setup %><br/>
                                  <%= result1.delivery %>
                                <% } else if(result1.joke) { %>
                                  <%= result1.joke %>
                                <% } else {%>
                                        <% for(let i=0;i<result1.jokes.length;i++) {%>
                                            <% if(result1.jokes[i].setup){ %>
                                                <%= result1.jokes[i].setup %><br/>
                                                <%= result1.jokes[i].delivery %>
                                                <div id="hr">
                                                    <hr/>
                                                </div>
                                            <% }else{ %>
                                                <%= result1.jokes[i].joke %>
                                                <div id="hr">
                                                    <hr/>
                                                </div>
                                            <% } %>
    
                                        <%}%>
                                    <% } %>
                              <% } else { %>
                                Joke
                              <% } %>
                        </div>
                                                   
                    </div>
                </td>
            </tr>
        </table>
    </form>

    <script>
        document.querySelector("#reset").addEventListener("click",function(){
            document.getElementsByClassName("test")[0].textContent="Joke";
        })
        </script>
        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>